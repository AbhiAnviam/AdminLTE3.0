<div class="container login_container">
  <div class="row">
      <div class="col-4"></div>
      <div class="col-4">
        <div class="card login_card p-4">
          <h2 class="text-center">Log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, :class => 'float-left mb-0' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', :placeholder => 'Enter Your Email' %>
            </div>
          
            <div class="field mt-3">
              <%= f.label :password, :class => 'float-left mb-0' %>
              <%= f.password_field :password, autocomplete: "current-password", :class => 'form-control', :placeholder => 'Enter Your Password' %>
            </div>
          
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          
            <div class="actions">
              <%= f.submit "Log in", :class => 'form-control btn btn-success mb-3' %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="col-4"></div>
    </div>
</div>
