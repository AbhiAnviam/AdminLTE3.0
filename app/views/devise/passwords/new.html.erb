<div class="container login_container">
  <div class="row">
      <div class="col-4"></div>
      <div class="col-4 ">
        <div class="card login_card p-4">
          <h3 class="text-center mb-4">Forgot your password?</h3>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
          
            <div class="field">
              <%= f.label :email, :class => 'float-left mb-0' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', :placeholder => 'Enter Your Email' %>
            </div>
          
            <div class="actions">
              <%= f.submit "Send me reset password instructions", :class => 'form-control btn btn-success mt-3' %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="col-4"></div>
    </div>
</div>