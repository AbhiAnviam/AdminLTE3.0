<div class="container pt-5">
	<%= form_for @subscription ,url: { action: "update" } do |f| %>
		<div class="row">
			<div class="col-6">
		<%= f.text_field :plan_name, autofocus: true, class: "form-control", placeholder: "plan name" %>
			</div>
			<div class="col-6">
			<%= f.text_field :price, autofocus: true, class: "form-control", placeholder: "price" %>

			</div>
			
		</div>
		<div class="row mt-2">
			<div class="col-12 d-flex justify-content-end">
			<%= link_to "Cencle", super_admin_subscription_plans_path, class: "btn btn-danger mr-2"%>
			<%= f.submit class: "btn btn-success"%>
			</div>
			</div>
	<% end %>
</div>
